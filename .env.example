# Frontend Environment Variables
# Copy this file to .env and update with your values

# API Configuration
# Base URL for the backend API
# For development (local):
VITE_API_BASE_URL=http://localhost:3000/api

# For production:
# VITE_API_BASE_URL=https://yourdomain.com/api

# Mock API Configuration
# Set to 'true' to use mock API services (for frontend-only development)
# Set to 'false' to connect to real backend API
VITE_MOCK_API=false

# Note: In Vite, all environment variables must be prefixed with VITE_
# to be exposed to the client-side code.
